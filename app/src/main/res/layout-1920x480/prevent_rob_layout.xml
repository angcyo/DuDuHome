<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="40"></View>

        <LinearLayout
            android:id="@+id/vehicle_guard_btn"
            android:layout_width="120dp"
            android:layout_height="0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:layout_weight="180"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/vehicle_guard_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vehicle_guard_icon" />

            <com.dudu.aios.ui.utils.customFontUtils.FZLFontTextView
                android:id="@+id/text_vehicle_guard_ch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/vehicle_guard_ch"
                android:textSize="15sp"
                android:layout_marginTop="5dp"/>

            <com.dudu.aios.ui.utils.customFontUtils.DINLightFontTextView
                android:id="@+id/text_vehicle_guard_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_weight="0.03"
                android:singleLine="true"
                android:text="@string/vehicle_guard_en"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vehicle_robbery_btn"
            android:layout_width="120dp"
            android:layout_height="0dip"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:layout_weight="180"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/vehicle_robbery_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vehicle_robbery_icon" />

            <com.dudu.aios.ui.utils.customFontUtils.FZLFontTextView
                android:id="@+id/text_vehicle_robbery_ch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="@string/vehicle_robbery_ch"
                android:textSize="15sp" />

            <com.dudu.aios.ui.utils.customFontUtils.DINLightFontTextView
                android:id="@+id/text_vehicle_robbery_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:singleLine="true"
                android:text="@string/vehicle_robbery_en"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="80"
            android:orientation="horizontal">

            <Button
                android:id="@+id/back_button"
                android:layout_width="32dp"
                android:layout_height="26dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_back_selector" />

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout

        android:id="@+id/vehicle_right_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></RelativeLayout>

</LinearLayout>