<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow>

            <Button
                android:id="@+id/button_one"
                style="@style/button_vehicle_keyboard_style"
                android:background="@drawable/button_one_selector"
                android:tag="1" />

            <Button
                android:id="@+id/button_two"
                style="@style/button_vehicle_keyboard_style"
                android:background="@drawable/button_two_selector"
                android:tag="2" />

            <Button
                android:id="@+id/button_three"
                style="@style/button_vehicle_keyboard_style"
                android:background="@drawable/button_three_selector"
                android:tag="3" />

            <Button
                android:id="@+id/button_well"
                style="@style/button_vehicle_keyboard_style"
                android:background="@drawable/button_well_selector"
                android:tag="#" />

        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/button_four"
                style="@style/button_vehicle_keyboard_style"
                android:background="@drawable/button_four_selector"
                android:tag="4" />

            <Button
                android:id="@+id/button_five"
                style="@style/button_vehicle_keyboard_style"
                android:background="@drawable/button_five_selector"
                android:tag="5" />

            <Button
                android:id="@+id/button_six"
                style="@style/button_vehicle_keyboard_style"
                android:background="@drawable/button_six_selector"
                android:tag="6" />

            <Button
                android:id="@+id/button_zero"
                style="@style/button_vehicle_keyboard_style"
                android:background="@drawable/button_zero_selector"
                android:tag="0" />

        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/button_seven"
                style="@style/button_vehicle_keyboard_style"
                android:background="@drawable/button_seven_selector"
                android:tag="7" />

            <Button
                android:id="@+id/button_eight"
                style="@style/button_vehicle_keyboard_style"
                android:background="@drawable/button_eight_selector"
                android:tag="8" />

            <Button
                android:id="@+id/button_nine"
                style="@style/button_vehicle_keyboard_style"
                android:background="@drawable/button_nine_selector"
                android:tag="9" />

            <Button
                android:id="@+id/button_rice"
                style="@style/button_vehicle_keyboard_style"
                android:background="@drawable/button_rice_selector"
                android:tag="*" />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.dudu.aios.ui.utils.customFontUtils.FZLFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password_unlock_ch" />

        <com.dudu.aios.ui.utils.customFontUtils.DINLightFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/password_unlock_en" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/password_unlock_point_full" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/password_unlock_point_full" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/password_unlock_point_full" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/password_unlock_point_null" />

        </LinearLayout>

        <Button
            android:id="@+id/button_gesture_unlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_vehicle_unlock_selector"
            android:text="@string/gesture_unlock" />

        <Button
            android:id="@+id/button_passwordSet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_vehicle_unlock_selector"
            android:text="@string/passwordSet_chinese" />

    </LinearLayout>

</LinearLayout>