<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg">

    <TableLayout
        android:id="@+id/number_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp">

        <TableRow>

            <Button
                android:id="@+id/number_button01"
                style="@style/calling_button_style"
                android:background="@drawable/blue_keyboard_one_selector"
                android:tag="1" />

            <Button
                android:id="@+id/number_button02"
                style="@style/calling_button_style"
                android:background="@drawable/blue_keyboard_two_selector"
                android:tag="2" />

            <Button
                android:id="@+id/number_button03"
                style="@style/calling_button_style"
                android:background="@drawable/blue_keyboard_three_selector"
                android:tag="3" />

            <Button
                android:id="@+id/well_button"
                style="@style/calling_button_style"
                android:background="@drawable/blue_keyboard_well_selector"
                android:tag="#" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/number_button04"
                style="@style/calling_button_style"
                android:background="@drawable/blue_keyboard_four_selector"
                android:tag="4" />

            <Button
                android:id="@+id/number_button05"
                style="@style/calling_button_style"
                android:background="@drawable/blue_keyboard_five_selector"
                android:tag="5" />

            <Button
                android:id="@+id/number_button06"
                style="@style/calling_button_style"
                android:background="@drawable/blue_keyboard_six_selector"
                android:tag="6" />

            <Button
                android:id="@+id/number_button0"
                style="@style/calling_button_style"
                android:background="@drawable/blue_keyboard_zero_selector"
                android:tag="0" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/number_button07"
                style="@style/calling_button_style"
                android:background="@drawable/blue_keyboard_seven_selector"
                android:tag="7" />

            <Button
                android:id="@+id/number_button08"
                style="@style/calling_button_style"
                android:background="@drawable/blue_keyboard_eight_selector"
                android:tag="8" />

            <Button
                android:id="@+id/number_button09"
                style="@style/calling_button_style"
                android:background="@drawable/blue_keyboard_nine_selector"
                android:tag="9" />

            <Button
                android:id="@+id/rice_button"
                style="@style/calling_button_style"
                android:background="@drawable/blue_keyboard_rice_selector"
                android:tag="*" />
        </TableRow>
    </TableLayout>

    <RelativeLayout
        android:id="@+id/right_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/number_table"
        android:layout_alignTop="@id/number_table"
        android:layout_toRightOf="@id/number_table">

        <Button
            android:id="@+id/calling_terminate_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/blue_calling_stop_selector" />

        <TextView
            android:id="@+id/calling_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/calling_name"
            android:layout_centerHorizontal="true"
            android:text="00:00"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/calling_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text="罗吒帅哥"
            android:textSize="12sp"
            android:layout_marginBottom="10dp"/>

    </RelativeLayout>

</RelativeLayout>
